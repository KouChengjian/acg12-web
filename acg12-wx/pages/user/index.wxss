Page {
  background: #eee;
}

.body {
  color: #666;
}

.body .user {
  display: flex;
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
}

.body .user .user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #eee;
  vertical-align: middle;
}

.body .user .user-info {
  margin-left: 40rpx;
  text-align: center;
  display: block;
}

.body .user .user-info .user-nick {
  font-size: 16px;
  overflow: hidden;
  line-height: 120rpx;
}

.body .menu {
  width: 100%;
  margin-top: 10rpx;
  background-color: #fff;
}

.body .menu .menu-item {
  height: 50rpx;
  border-top: 1px solid #f1f1f1;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.body .menu .menu-item .menu-item-icon {
  width: 50rpx;
  height: 50rpx;
  float: left;
  margin-left: 20rpx;
}

.body .menu .menu-item .menu-item-text{
  float: left;
  font-size: 16px;
  line-height: 50rpx;
  margin-left: 20rpx;
}
